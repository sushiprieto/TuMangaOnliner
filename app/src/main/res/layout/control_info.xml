<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/accent_material_light"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="120dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_preview" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/autor"
                    android:textColor="@color/accent_material_light"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/lineAuthor"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/accent_material_light" />

                <TextView
                    android:id="@+id/textAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:maxLines="1"
                    android:text="@string/nodisponible" />

                <TextView
                    android:id="@+id/titleGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/genre"
                    android:textColor="@color/accent_material_light"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/lineGenre"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/accent_material_light" />

                <TextView
                    android:id="@+id/textGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:maxLines="1"
                    android:text="@string/nodisponible" />

                <TextView
                    android:id="@+id/titleStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/estado"
                    android:textColor="@color/accent_material_light"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/lineStatus"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/accent_material_light" />

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:maxLines="1"
                    android:text="@string/nodisponible" />

                <TextView
                    android:id="@+id/titleServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/server"
                    android:textColor="@color/accent_material_light"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/lineServer"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/accent_material_light" />

                <TextView
                    android:id="@+id/textServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:maxLines="1"
                    android:text="@string/nodisponible" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/blockSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent_material_light"
            android:padding="5dp"
            android:text="@string/sinopsis"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sinopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/nodisponible" />

    </LinearLayout>
</ScrollView>